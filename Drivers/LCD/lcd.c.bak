/**
 * @brief       LCD���ڴ�����
 * @param       regno: �Ĵ������/��ַ
 * @retval      ��ȡ��������
 */
uint16_t lcd_read_ram(uint8_t regno)
{
    if(lcddev.id == 0x7796)
	{
		uint16_t colorl = 0, colorh = 0;
  
    SPI_CSX = 0;	
    SPI_SDA = 0;                /* д���� */
    SPI_SCL = 0;
    SPI_SCL = 1; 

    spi_send_byte(regno);       /* д��Ҫд�ļĴ������ */
    
    delay_us(1);

    colorl = spi_read_byte();   /* ���Ͱ�λ���� */
  
    SPI_SCL = 0;
    delay_us(1);
    SPI_SCL = 1;     
    delay_us(1);                /* dummy clock cycle */
    
    colorh = spi_read_byte();   /* ���߰�λ���� */
    
    SPI_CSX = 1;                /* ���������� */
   
    return  colorl | (colorh << 8);
	}
	else
	{
		uint16_t colorl = 0, colorh = 0, colorh1 = 0, colorh2 = 0, color = 0;
  
    SPI_CSX = 0;	
    SPI_SDA = 0;                /* д���� */
    SPI_SCL = 0;
    SPI_SCL = 1; 

    spi_send_byte(regno);       /* д��Ҫд�ļĴ������ */

    SPI_SCL = 0;
    delay_us(1);
    SPI_SCL = 1;     
    delay_us(1); 
  
    colorl = spi_read_byte();   /* ���Ͱ�λ���� */
    
    colorh = spi_read_byte();   /* ���߰�λ����R */
       
    colorh1 = spi_read_byte();   /* ���߰�λ����G */
        
    colorh2 = spi_read_byte();   /* ���߰�λ����B */
        
    color = (((colorh >> 3) << 11) | ((colorh1 >> 2) << 5) | (colorh2 >> 3));
    printf(" color=%x\r\n",color); 
    
    SPI_CSX = 1;                /* ���������� */
   
    return  colorl | (colorh << 8);
	}
}

/**
 * @brief       ��ȡLCD����IC��ID
 * @param       regno: �Ĵ������/��ַ
 * @retval      ��ȡ����ID
 */
uint16_t lcd_read_id(uint8_t regno)
{
    uint16_t id1 = 0, id2 = 0;
  
    SPI_CSX = 0;	
    SPI_SDA = 0;                /* д���� */
    SPI_SCL = 0;
    SPI_SCL = 1; 

    spi_send_byte(regno);       /* д��Ҫд�ļĴ������ */
	
	  if(lcddev.id == 0x7789) 
		{
			SPI_SDA = 1; 
		}
    
    delay_us(2);

    SPI_SCL = 0;
    delay_us(2);
    SPI_SCL = 1;     
    delay_us(2);                /* dummy clock cycle */
  
    id1 = spi_read_byte();      /* ����0X00 */    
    id1 = spi_read_byte();      /* ��ȡ0X77 */
    id2 = spi_read_byte();      /* ��ȡ0X96 */   
  
    SPI_CSX = 1;                /* ���������� */ 

    return  id2 | (id1 << 8);
}

