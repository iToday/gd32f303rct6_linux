/**
 * @brief       SPIд����
 * @note        ��LCD����ICд��1 byte����
 * @param       buf: Ҫд�������
 * @retval      ��
 */
void spi_send_byte(uint8_t buf)
{
    uint8_t count = 0;

    for (count = 0 ; count < 8 ; count++)
    {        
        if (buf & 0x80)     /* ����1 */
        {
            SPI_SDA = 1;
        }
        else                /* ����0 */
        {
            SPI_SDA = 0;
        }
        
        buf <<= 1;
        SPI_SCL = 0;
        SPI_SCL = 1;        /* ��������Ч */    
    }
}

/**
 * @brief       SPI������
 * @note        ��LCD����IC��ȡ1 byte����
 * @param       ��
 * @retval      ��ȡ��������
 */
uint8_t spi_read_byte(void)
{
    uint8_t count = 0;
    uint8_t val = 0;

    for (count = 0; count < 8; count++)    /* ����8λ���� */
    {
        val <<= 1;
        SPI_SCL = 0;      
        delay_us(1);

        if (SPI_READ_SDA)
        {       
            val++;
        }

        SPI_SCL = 1;        /* ��������Ч */
    }
    
    return val;
}

/**
 * @brief       ��LCD����ICд���� 
 * @param       cmd: Ҫд�������
 * @retval      ��
 */
void SPI_CmdWrite(uint8_t cmd)
{
    SPI_CSX = 0;	
    SPI_SDA = 0;      /* д���� */
    SPI_SCL = 0;
    SPI_SCL = 1; 
    spi_send_byte(cmd);  
    SPI_CSX = 1;
}  

/**
 * @brief       ��LCD����ICд���� 
 * @param       data: Ҫд�������
 * @retval      ��
 */
void SPI_DataWrite(uint8_t data)
{
    SPI_CSX = 0;	
    SPI_SDA = 1;     /* д���� */
    SPI_SCL = 0;
    SPI_SCL = 1; 
    spi_send_byte(data);  
    SPI_CSX = 1;
} 

/**
 * @brief       ��LCD����ICд���ص������ 
 * @param       ��
 * @retval      ��
 */
void SPI_DataWrite_Pixel(uint16_t data)
{ 
    SPI_DataWrite(data >> 8);
    SPI_DataWrite(data);  
}

/**
 * @brief       LCD�ٶ�һ������
 * @param       regno: �Ĵ������/��ַ
